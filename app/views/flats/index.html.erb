<div class='container mt-4'>
  <h2>All our flats (<%=@num%>)</h2>
  <div class="row">
    <% @flats.each do |flat|%>
      <div class='col-md-4 mb-4 p-0 rounded border shadow'>
        <div class='card-top p-4 bg-light'>
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
          <div class="d-flex justify-content-left">
            <p>🧑‍🤝‍🧑 <%= flat.number_of_guests %></p>
            <p>💲 <%= flat.price_per_night %></p>
          </div>
        </div>
        <div class='card-bottom w-100 p-4 border'>
          <%= link_to 'More info', flat_path(flat)%>
          <%= link_to 'Edit', edit_flat_path(flat)%>
          <%= link_to 'Remove', flat_path(flat), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
        </div>

      </div>
    <%end%>
  </div>
</div>
