<h2>All our flats (<%=@num%>)</h2>

<% @flats.each do |flat|%>
  <div class='card'>
    <div class='card-top'>
      <h4><%= flat.name %></h4>
      <p><%= flat.address %></p>
      <div>
        <p>🧑‍🤝‍🧑 <%= flat.number_of_guests %></p>
        <p>💲 <%= flat.price_per_night %></p>
      </div>
    </div>
    <div class='card-bottom'>
      <%= link_to 'More info', flat_path(flat)%>
    </div>

  </div>
<%end%>
